{% extends 'base.html.twig' %}

{% block body %}
    <h1>Compras list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Proveedor</th>
                <th>Proveedorcuit</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compra in compras %}
            <tr>
                <td><a href="{{ path('compra_show', { 'id': compra.id }) }}">{{ compra.id }}</a></td>
                <td>{{ compra.proveedor }}</td>
                <td>{{ compra.proveedorCuit }}</td>
                <td>{{ compra.fecha }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('compra_show', { 'id': compra.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('compra_edit', { 'id': compra.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('compra_new') }}">Create a new compra</a>
        </li>
    </ul>
{% endblock %}
